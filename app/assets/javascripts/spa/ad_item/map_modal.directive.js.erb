(function() {
  "use strict";

  angular
    .module("spa.adItem")
    .directive('mapModal', MapModal);


   

    function MapModal(){

      var ddo = {
        restrict: 'E',
        scope: {
          show: '='
        },
        transclude: true,
        link: function(scope, element, attrs){
          scope.dialogStyle = {};
          if (attrs.width)
            scope.dialogStyle.width = attrs.width;
          if (attrs.height)
            scope.dialogStyle.height = attrs.height;
          scope.hideModal = function() {
            scope.show = false;
          };
        },

        templateUrl: '<%= asset_path("spa/ad_item/map_modal.html") %>'
      };

      return ddo;
    }


  
})();