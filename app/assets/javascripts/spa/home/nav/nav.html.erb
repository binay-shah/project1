<div id="home-nav" >
	<div class="container">
		<div  class="row">

			<div class="col-sm-1"></div>

			<div class="col-sm-10">
				<div class="well" id="searchbox">
				  	<div class="row">
					    <div class="col-xs-4">
					      <div class="inner-addon left-addon">
					        <span class="glyphicon glyphicon-map-marker" style="color:grey"></span>
					      	<input type="text" class="form-control" placeholder="All Nepal">
						  </div>
				    	</div>

					    <div class="col-xs-6">
					      <input type="text" class="form-control" placeholder=".col-xs-3">
					    </div>
					    <div class="col-xs-2">
					      <button type="submit" class="btn btn-primarybtn-md">Submit</button>
					    </div>
			  		</div>
			  	</div>
			</div>
		  	<div class="col-sm-1"></div>
		</div>

		<div class="row">
		  
		    <div class="col-sm-1"></div>

		    <div class="col-sm-10">
		    	<div ng-repeat="item in $ctrl.mainCategory">
				    <div class="row" ng-if="$index % 4 == 0">
				    	<div  ng-if="$ctrl.mainCategory[$index]" ng-click="$ctrl.collapseIt($event)" class="col-sm-3" data-id="{{$ctrl.mainCategory[$index].id}}">        
				            <a>
				              <div class="nav-category-item">
				                <img src= "<%= image_url('car.svg') %>"  width="50" height="50">
				                <span>{{$ctrl.mainCategory[$index].name}}</span>
				              </div>
				            </a>             
			        	</div>
			        	<div  ng-if="$ctrl.mainCategory[$index+1]" ng-click="$ctrl.collapseIt($event)" class="col-sm-3" data-id="{{$ctrl.mainCategory[$index+1].id}}">
				            <a>
				              <div class="nav-category-item">
				                <img src= "<%= image_url('car.svg') %>"  width="50" height="50">
				                <span>{{$ctrl.mainCategory[$index+1].name}}</span>
				              </div>
				            </a>             
			        	</div>
			        	<div  ng-if="$ctrl.mainCategory[$index+2]" ng-click="$ctrl.collapseIt($event)" class="col-sm-3" data-id="{{$ctrl.mainCategory[$index+2].id}}">        
				            <a>
				              <div class="nav-category-item">
				                <img src= "<%= image_url('car.svg') %>"  width="50" height="50">
				                <span>{{$ctrl.mainCategory[$index+2].name}}</span>
				              </div>
				            </a>             
			        	</div>
			        	<div  ng-if="$ctrl.mainCategory[$index+3]" ng-click="$ctrl.collapseIt($event)" class="col-sm-3" data-id="{{$ctrl.mainCategory[$index+3].id}}">        
				            <a>
				              <div class="nav-category-item">
				                <img src= "<%= image_url('car.svg') %>"  width="50" height="50">
				                <span>{{$ctrl.mainCategory[$index+3].name}}</span>
				              </div>
				            </a>             
			        	</div>
				    </div>

				    <div ng-if="$index % 4 == 0">
					    <div id="subcategory-modal1" class="subcategory-modal" data-id="bottom1" ng-if="$ctrl.collapseId == 'bottom'+$ctrl.mainCategory[$index+0].id">
					    	<div class="subcategory-modal-content">
								<div class="subcategory-modal-header" >
			    					<a>>View All Ads in </a>{{$ctrl.mainCategory[$index].name}}
		  						</div>

								<div   ng-repeat="item in $ctrl.mainCategory[$index+0].sub_category" class="col-sm-3">     
							        <a>
							          <div class="nav-category-item">	                
							            <span> > {{item.name}}</span>
							          </div>
							        </a>             
								</div>
							</div>       	
					    </div>
					    <div id="subcategory-modal2" class="subcategory-modal" data-id="bottom1" ng-if="$ctrl.collapseId == 'bottom'+$ctrl.mainCategory[$index+1].id">
					    	<div class="subcategory-modal-content">
								<div class="subcategory-modal-header" >
			    					<a>>View All Ads in </a>{{$ctrl.mainCategory[$index+1].name}}
		  						</div>

								<div   ng-repeat="item in $ctrl.mainCategory[$index+1].sub_category" class="col-sm-3">     
							        <a>
							          <div class="nav-category-item">	                
							            <span> > {{item.name}}</span>
							          </div>
							        </a>             
								</div>
							</div>       	
					    </div>
					    <div id ="subcategory-modal3" class="subcategory-modal" data-id="bottom1" ng-if="$ctrl.collapseId == 'bottom'+$ctrl.mainCategory[$index+2].id">
					    	<div class="subcategory-modal-content">
								<div class="subcategory-modal-header" >
			    					<a>>View All Ads in </a>{{$ctrl.mainCategory[$index+2].name}}
		  						</div>

								<div   ng-repeat="item in $ctrl.mainCategory[$index+1].sub_category" class="col-sm-3">     
							        <a>
							          <div class="nav-category-item">	                
							            <span> > {{item.name}}</span>
							          </div>
							        </a>             
								</div>
							</div>       	
					    </div>
					    <div id ="subcategory-modal4" class="subcategory-modal" data-id="bottom1" ng-if="$ctrl.collapseId == 'bottom'+$ctrl.mainCategory[$index+3].id">
					    	<div class="subcategory-modal-content">
								<div class="subcategory-modal-header" >
			    					<a>>View All Ads in </a>{{$ctrl.mainCategory[$index+3].name}}
		  						</div>

								<div   ng-repeat="item in $ctrl.mainCategory[$index+1].sub_category" class="col-sm-3">     
							        <a>
							          <div class="nav-category-item">	                
							            <span> > {{item.name}}</span>
							          </div>
							        </a>             
								</div>
							</div>       	
					    </div>
					</div>    
				</div>   
		    </div>     

		 	<div class="col-sm-1"></div>
		   
		</div> 
	</div>	
</div>









